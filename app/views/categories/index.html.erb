<h1 class="text-center">Cinema</h1>
<%= link_to 'Create new category', new_category_path, class:'btn btn-outline-success' %>
<br>

<div class="container">
  <% @categories.each do |category| %>
  <div class="row">
    <div class="col-sm">
      <%= link_to category.title , category_films_collection_path(category.id)%>

    </div>
  </div>
      <%= link_to 'Edit category', edit_category_path(category.id), class:'btn btn-outline-success' %>
      <%= image_tag category.images[rand(category.images.count)], style: 'width: 200px; display: block',class:'card-photo' %>
  <% end %>

</div>
